{
    "name": "devedge/photo-desc",
    "description": "A PHP script that reads photos from an input folder and uses OpenRouter AI to generate descriptions and tags",
    "type": "library",
    "license": "MIT",
    "keywords": ["photo", "image", "ai", "description", "tagging", "openrouter"],
    "authors": [
        {
            "name": "Peter Petermann",
            "email": "ppetermann80@googlemail.com",
            "homepage": "https://github.com/ppetermann"
        }
    ],
    "homepage": "https://github.com/ppetermann/photo-desc",
    "support": {
        "issues": "https://github.com/ppetermann/photo-desc/issues",
        "source": "https://github.com/ppetermann/photo-desc"
    },
    "require": {
        "php": ">=7.4",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^1.1 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.5",
        "king23/di": "^2.0",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^2.9",
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "react/http": "^1.8",
        "react/promise": "^2.10",
        "react/event-loop": "^1.4",
        "react/http-client": "^0.5.11"
    },
    "autoload": {
        "psr-4": {
            "PhotoDesc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhotoDesc\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
